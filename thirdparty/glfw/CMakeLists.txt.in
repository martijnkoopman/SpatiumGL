cmake_minimum_required(VERSION 3.1.0)

project(glfw-download NONE)

# Do git clone, update, configure, build and install (no testing)
# Build without docs, tests and no examples
include(ExternalProject)
ExternalProject_Add(glfw
  GIT_REPOSITORY    https://github.com/glfw/glfw.git
  GIT_TAG           3.3-stable
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/glfw-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/glfw-build"
  INSTALL_DIR       "${CMAKE_CURRENT_BINARY_DIR}/glfw-install"
  TEST_COMMAND      ""
  CMAKE_CACHE_ARGS  -DGLFW_BUILD_DOCS:BOOL=OFF -DGLFW_BUILD_TESTS:BOOL=OFF -DGLFW_BUILD_EXAMPLES:BOOL=OFF -DGLFW_INSTALL:BOOL=ON -DCMAKE_INSTALL_PREFIX:STRING=${CMAKE_CURRENT_BINARY_DIR}/glfw-install
)
