cmake_minimum_required(VERSION 3.1.0)

project(googletest-download NONE)

# Do git clone, update, configure, build and install (no testing)
# Build without tests
include(ExternalProject)
ExternalProject_Add(googletest
  GIT_REPOSITORY    https://github.com/google/googletest.git
  GIT_TAG           master
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googletest-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googletest-build"
  INSTALL_DIR       "${CMAKE_CURRENT_BINARY_DIR}/googletest-install"
  TEST_COMMAND      ""
  CMAKE_CACHE_ARGS  -DINSTALL_GTEST:BOOL=ON -DCMAKE_INSTALL_PREFIX:STRING=${CMAKE_CURRENT_BINARY_DIR}/googletest-install -Dgtest_force_shared_crt:BOOL=ON
)
